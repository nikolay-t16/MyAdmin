?>
<? foreach ($body_values as $body_val) { ?>
	<td <?= isset($body_val['width']) ? 'width="' . $body_val['width'] . '%"' : '' ?>>
		<?
		if (isset($body_val['view_helper'])) {
			$func = $body_val['view_helper']['func_name'];
			echo $body_val['view_helper']['obj']->$func($it,$body_val['field'],$body_val['view_helper']['param']);
		}else
			echo $it[$body_val['field']]
		?>
	</td>
<? } ?>